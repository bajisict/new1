---
// src/components/ImageCard.astro
const { post } = Astro.props;
---

<div class="max-w-sm rounded-lg shadow-lg bg-white overflow-hidden">
  <!-- Зургийн хэсэг -->
  {post.imageUrl ? (
    <img 
      src={post.imageUrl} 
      alt={post.title}
      class="w-full h-48 object-cover"
    />
  ) : (
    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
      <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <span class="ml-2 text-gray-500">No Image</span>
    </div>
  )}
  
  <!-- Content хэсэг -->
  <div class="p-6">
    <h2 class="text-xl font-bold text-gray-900 mb-2">
      {post.title}
    </h2>
    <p class="text-gray-600 text-sm mb-4">
      {post.content.length > 100 
        ? post.content.substring(0, 100) + '...' 
        : post.content
      }
    </p>
    <div class="flex justify-between items-center">
      <span class="text-xs text-gray-500">
        {new Date(post.createdAt).toLocaleDateString('mn-MN')}
      </span>
      <a href={`/posts/${post.id}`} class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm transition-colors">
        Read More
      </a>
    </div>
  </div>
</div>